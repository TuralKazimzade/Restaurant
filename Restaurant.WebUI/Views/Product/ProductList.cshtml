@model List<ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Məhsulların siyahısı</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Məhsulun adı</th>
                                    <th scope="col">Məhsulun Qiyməti</th>
                                    <th scope="col">Məhsulun Kateqoriyası</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncəllə</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ProductName</td>
                                        <td>@item.ProductId</td>
                                        <td>@item.CategoryName</td>
                                        <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncəllə</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Product/CreateProduct/" class="btn btn-success">Yeni Məhsulu əlavə et</a>
                    </div>
                </div>




            </div>

        </div>
    </div>
</section>

