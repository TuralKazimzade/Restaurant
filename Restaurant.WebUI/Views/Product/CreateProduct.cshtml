@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Məhsul əlavə etmə səhifəsi</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Məhsulun Adı</label>
                            <input type="text" asp-for="ProductName" class="form-control" />
                            <br />
                            <label>Məhsulun Qiyməti</label>
                            <input type="text" asp-for="Price" class="form-control" />
                            <br />
                            <label>Məhsulun Kateqoriyası</label>
                            <select asp-for="CategoryId" class="form-control"asp-items="(IEnumerable<SelectListItem>)ViewBag.v ">
                                <option value="">Kateqoriya seçin</option>
                            </select>
                            <br />
                            <label>Məhsulun şəklinin linki</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" />
                            <br />
                            <label>Məhsul haqqında</label>
                            <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                            <br />                           
                         
                            <button class="btn btn-primary">Məhsulu Əlavə et</button>
                        </form>
                    </div>
                </div>




            </div>

        </div>
    </div>
</section>

